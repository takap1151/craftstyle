    <!-- Container -->
    <div id="container">  
      <!-- Header -->
      <div id="header">
        <%= render 'layouts/header' %>
        <%= yield :slideshow unless Date.new == Date.new %>
    <div class="japan"></div>
      </div><!-- /#header -->
      <!-- /Header -->

      <div id="main">
        <%= yield %>
      </div><!-- /#main -->
    </div><!-- /Container -->

    <!-- Footer -->
    <div id="footer">
      <%= render 'layouts/footer' %>
    </div><!-- /#footer-->
    <!-- /Footer -->
    <%= javascript_include_tag "application" %>
  </body>
</html>
